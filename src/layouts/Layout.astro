---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/ft_docs/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <style>
      :global(pre) {
        padding: 10px;
        box-shadow: inset black 0px 0px 5px 5px;
      }
    </style>
    <header>
      <style>
      img {
        height: 1em;
      }
      body {
        color: white;
        background-color: black;
      }
      h1 {
        display: flex;
        flex-direction: row;
        gap: 0.5em;
      }

      </style>
      <h1>
        <span>
          Formula Trinity Autonomous Docs
        </span>
          <img src="/ft_docs/favicon.png"/>
      </h1>
    </header>
    <slot/>
  </body>
</html>
