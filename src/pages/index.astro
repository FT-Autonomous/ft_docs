  ul {
  list-style-type: none;
  padding-left: 0px;
}
ul li {
  background: linear-gradient(90deg, #350000 0%, #350000 30%, var(--backgroundColor) 100%);
}
ul li:nth-child(odd) {
  background: linear-gradient(90deg, #2E0000 0%, #2E0000 30%, var(--backgroundColor) 100%);
}
  </style>
  <div style={{paddingLeft: "30px"}}>
  <style>
      object {
        width: 600px;
      }
      </style>
    <object type="image/svg+xml" data="/ft_docs/system diagram.svg"></object>
    <h2>Departments</h2>
  <ul>
    <li>Perception</li>
    {departmentEntries.map(e => (<li><a href={`/ft_docs/${e.slug}`}}>{e.data.title}</a></li>))}
    <li>Path Planning</li>
    <li>Control</li>
    <li>Hardware</li>
    <li>Simulation</li>
  </ul>
